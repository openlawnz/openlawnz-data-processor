{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Import Cases (JDO)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}/dist",
            "program": "${workspaceFolder}/src/main.ts",
            "envFile": "${workspaceFolder}/.env",
            "args": ["--trace-warnings", "--importCases", "--dangerouslySkipConfirmDownloadPDFsInOrderToHaveDebuggerWorkInVSCode"],
            "runtimeArgs": [],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sync Azure Cognitive Search",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}/dist",
            "program": "${workspaceFolder}/src/main.ts",
            "envFile": "${workspaceFolder}/.env",
            "args": ["--trace-warnings", "--syncAzureCognitiveSearch"],
            "runtimeArgs": [],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Import Legislation",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}/dist",
            "program": "${workspaceFolder}/src/main.ts",
            "args": ["--importLegislation"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Import Static",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}/dist",
            "program": "${workspaceFolder}/src/main.ts",
            "args": ["--importStatic"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Rebuild S3 Index",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}/dist",
            "program": "${workspaceFolder}/src/main.ts",
            "args": ["--rebuildS3Index"],
            "envFile": "${workspaceFolder}/.env",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}